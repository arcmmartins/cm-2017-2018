<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="pt.ua.cm.smartdomotics.fragments.Room">
    <RelativeLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:orientation="horizontal"

        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"

        >

        <ImageView

            android:id="@+id/music_controller_icon"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:contentDescription="Control your music"

            android:paddingEnd="10dp"

            android:paddingStart="10dp"

            android:paddingBottom="30dp"

            android:src="@drawable/ic_music_note_black_24dp"

            android:layout_below="@+id/master_light_icon"

            android:layout_alignParentStart="true" />

        <ImageView

            android:id="@+id/imageView3"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:contentDescription="Control your music"

            android:paddingEnd="10dp"

            android:paddingStart="10dp"

            android:paddingBottom="30dp"
            android:src="@drawable/ic_music_note_black_24dp"

            android:layout_below="@+id/music_controller_icon"

            android:layout_alignParentStart="true" />

        <ImageButton

            android:id="@+id/next_music"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"

            android:layout_alignTop="@+id/play_music"

            android:paddingBottom="30dp"

            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_skip_next_black_24dp"

            android:paddingEnd="10dp"

            android:paddingStart="10dp"/>

        <ImageButton

            android:id="@+id/play_music"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/previous_music"

            android:paddingBottom="30dp"

            android:layout_toStartOf="@+id/next_music"

            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_play_arrow_black_24dp"

            android:paddingEnd="10dp"

            android:paddingStart="10dp"/>

        <ImageButton

            android:id="@+id/previous_music"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_skip_previous_black_24dp"

            android:paddingBottom="30dp"

            android:paddingEnd="10dp"

            android:paddingStart="10dp"

            android:layout_below="@+id/master_light_switch"

            android:layout_toStartOf="@+id/play_music" />

        <TextView

            android:id="@+id/music_volume"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_below="@+id/textView4"

            android:paddingBottom="30dp"

            android:layout_toEndOf="@+id/imageView3"

            android:text="Music Volume"

            android:textSize="18sp"

            tools:textAlignment="center"

            android:layout_alignBottom="@+id/imageView3"

            />

        <TextView

            android:id="@+id/textView4"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/music_controller_icon"

            android:layout_alignTop="@+id/music_controller_icon"

            android:paddingBottom="30dp"

            android:layout_toEndOf="@+id/music_controller_icon"

            android:text="Music Controller"

            android:textSize="18sp"

            tools:textAlignment="center" />

        <ImageView

            android:id="@+id/master_chandelier_icon"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"

            android:paddingBottom="30dp"

            android:layout_alignParentTop="true"

            android:contentDescription="Turn on/off the smoke alarm"

            android:paddingEnd="10dp"

            android:paddingStart="10dp"

            android:src="@drawable/lightbulb" />

        <TextView

            android:id="@+id/living_chandelier_light"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_above="@+id/master_light_icon"

            android:paddingBottom="30dp"

            android:layout_toEndOf="@id/master_chandelier_icon"

            android:text="Chandelier"

            android:textSize="18sp" />

        <Switch

            android:id="@+id/master_chandelier_switch"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/living_chandelier_light"

            android:layout_alignParentEnd="true"

            android:layout_alignTop="@+id/living_chandelier_light"

            android:paddingBottom="30dp"

            android:paddingEnd="10dp"

            android:paddingStart="10dp" />

        <ImageView

            android:id="@+id/master_light_icon"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"

            android:paddingBottom="30dp"

            android:layout_below="@id/master_chandelier_icon"

            android:contentDescription="Turn on/off the smoke alarm"

            android:paddingEnd="10dp"

            android:paddingStart="10dp"

            android:src="@drawable/lightbulb" />

        <TextView

            android:id="@+id/living_light"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:paddingBottom="30dp"

            android:layout_alignBottom="@+id/master_light_icon"

            android:layout_below="@+id/master_chandelier_icon"

            android:layout_toEndOf="@+id/master_light_icon"

            android:text="Light"

            android:textSize="18sp" />

        <Switch

            android:id="@+id/master_light_switch"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:paddingBottom="30dp"

            android:layout_alignBottom="@+id/living_light"

            android:layout_alignParentEnd="true"

            android:layout_below="@id/master_chandelier_switch"

            android:paddingEnd="10dp"

            android:paddingStart="10dp" />

        <ImageButton

            android:id="@+id/volume_plus"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"

            android:paddingBottom="30dp"

            android:layout_below="@+id/next_music"
            android:src="@drawable/ic_volume_up_black_24dp"

            android:layout_alignBottom="@+id/music_volume"

            android:paddingEnd="10dp"

            android:paddingStart="10dp"

            android:background="?android:selectableItemBackground"/>

        <ImageButton

            android:id="@+id/volume_less"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:paddingBottom="30dp"

            android:layout_below="@+id/previous_music"

            android:layout_toStartOf="@+id/play_music"
            android:src="@drawable/ic_volume_down_black_24dp"

            android:paddingEnd="10dp"

            android:paddingStart="10dp"

            android:background="?android:selectableItemBackground"

            android:layout_alignBottom="@+id/volume_plus" />

    </RelativeLayout>


</FrameLayout>
